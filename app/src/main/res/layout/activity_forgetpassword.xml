<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp20"
        android:paddingLeft="@dimen/dp20"
        android:paddingBottom="@dimen/dp20"
        android:background="@color/ColorHeader">
        <ImageView
            android:id="@+id/forgetpass_back"
            android:src="@drawable/left_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/project_title"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="#fff"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:layout_marginTop="@dimen/forget_margin_left"
        android:layout_marginLeft="@dimen/forget_margin_left"
        android:layout_marginRight="@dimen/forget_margin_left">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/head_mobile"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <AutoCompleteTextView
                android:id="@+id/forgetpass_mobile"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/phone"
                android:hint="手机号"
                android:textColor="#3D3D3D"
                android:textColorHint="#bfbfbf"
                android:height="50dp"
                android:textSize="15sp" >
            </AutoCompleteTextView>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/head_mobile"
            android:id="@+id/head_code"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <AutoCompleteTextView
                android:id="@+id/forgetpass_code"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/pencil"
                android:hint="验证码"
                android:textColor="#3D3D3D"
                android:textColorHint="#bfbfbf"
                android:textSize="15sp"
                android:height="50dp"
                android:singleLine="false">
            </AutoCompleteTextView>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/forget_margin_left"
        android:layout_marginRight="@dimen/forget_margin_left">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/head_pass"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <AutoCompleteTextView
                android:id="@+id/forgetpass_pass"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/key"
                android:hint="密码"
                android:textColor="#3D3D3D"
                android:textColorHint="#bfbfbf"
                android:height="50dp"
                android:textSize="15sp" >
            </AutoCompleteTextView>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_below="@id/head_pass"
            android:id="@+id/head_repass"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <AutoCompleteTextView
                android:id="@+id/forgetpass_repass"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/key"
                android:hint="确认密码"
                android:textColor="#3D3D3D"
                android:textColorHint="#bfbfbf"
                android:height="50dp"
                android:textSize="15sp" >
            </AutoCompleteTextView>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

    <ImageView
        android:src="@drawable/okwhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="@dimen/forget_margin_left"
        android:layout_marginRight="@dimen/forget_margin_left"
        android:background="@color/ColorHeader" />
</LinearLayout>