<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.hsky.androidshop.ProjectDetail">
    <RelativeLayout
        android:id="@+id/detail_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp20"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:paddingBottom="@dimen/dp10"
        android:background="@drawable/bottom_line">
        <ImageView
            android:id="@+id/project_btn_back"
            android:src="@drawable/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/project_title"
            android:text="详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="#444"/>
        <ImageView
            android:id="@+id/detail_share"
            android:src="@drawable/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_below="@id/detail_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/detail_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp20"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="@dimen/dp20">

                <ImageView
                    android:id="@+id/detail_image"
                    android:src="@drawable/share"
                    android:layout_width="120dp"
                    android:layout_height="100dp" />

                <TextView
                    android:layout_toRightOf="@id/detail_image"
                    android:id="@+id/detail_name"
                    android:text="产品名称"
                    android:paddingTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />
                <TextView
                    android:layout_below="@id/detail_name"
                    android:layout_toRightOf="@id/detail_image"
                    android:gravity="bottom"
                    android:paddingTop="5dp"
                    android:id="@+id/detail_catagory"
                    android:text="产品所属分类"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/detail_collect"
                    android:drawableTop="@drawable/star2"
                    android:text="收藏"
                    android:paddingTop="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/detail_round"
                    android:layout_alignParentRight="true"
                    android:gravity="center"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/detail1"
                android:layout_below="@id/detail_head"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:id="@+id/title1"
                android:layout_below="@id/detail1"
                android:text="产品信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:paddingLeft="10dp"/>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_below="@id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="规格"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:text="20元/盒"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="22sp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/ColorHeader"/>

                <TextView
                    android:text="每盒300克"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_below="@id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="优惠"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:text="无"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/line2"
                android:layout_below="@id/linear2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:id="@+id/title4"
                android:layout_below="@id/line2"
                android:text="详情"
                android:textSize="26sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/line3"
                android:layout_below="@id/title4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <TextView
                android:id="@+id/title5"
                android:layout_below="@id/line3"
                android:text="详情内容详情内容"
                android:textSize="26sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"/>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_below="@id/title5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/project"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"/>
                <ImageView
                    android:src="@drawable/project"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"/>
                <ImageView
                    android:src="@drawable/project"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="140dp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/title6"
                android:layout_below="@id/linear3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_below="@+id/title6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title7"
                    android:text="总价:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="18sp"
                    android:paddingLeft="10dp" />

                <TextView
                    android:text="0元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="22sp"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/ColorHeader"/>

                <LinearLayout
                    android:id="@+id/project_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:gravity="right">
                    <ImageView
                        android:scaleX="0.4"
                        android:scaleY="0.4"
                        android:id="@+id/project_add"
                        android:src="@drawable/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/buy_number"
                        android:text="0"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:scaleX="0.4"
                        android:scaleY="0.4"
                        android:id="@+id/project_delete"
                        android:src="@drawable/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/line4"
                android:layout_below="@id/linear4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"/>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_below="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title8"
                    android:text="加入购物车"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:paddingLeft="10dp" />

                <TextView
                    android:text="立即购买"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="22sp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/ColorHeader"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
