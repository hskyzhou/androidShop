<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/buy_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/me_button_list_background"
        android:layout_marginBottom="30dp">
        <TextView
            android:text="产品类别1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:textColor="#4c4c4c"/>

        <TextView
            android:text="全部删除"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="18sp"
            android:textColor="#a6a6a6"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/buy_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/buy_image"
            android:background="#ccc"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/buy_project_title"
            android:layout_toRightOf="@id/buy_image"
            android:text="产品说明"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/buy_project_desc"
            android:layout_toRightOf="@id/buy_image"
            android:layout_below="@id/buy_project_title"
            android:text="产品说明信息详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/buy_project_price"
            android:layout_toRightOf="@id/buy_image"
            android:layout_below="@id/buy_project_desc"
            android:text="20元/盒"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/buy_project_price_desc"
            android:layout_toRightOf="@id/buy_image"
            android:layout_below="@id/buy_project_price"
            android:text="每盒300克"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/buy_project_trash"
            android:src="@drawable/gubish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:id="@+id/buy_project_button"
            android:layout_below="@id/buy_project_trash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="10dp">
            <ImageView
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:id="@+id/project_add"
                android:src="@drawable/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/buy_number"
                android:text="1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:id="@+id/project_delete"
                android:src="@drawable/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:text="200元"
            android:layout_below="@id/buy_project_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/ColorHeader"
            android:textSize="20sp"/>
    </RelativeLayout>


</RelativeLayout>