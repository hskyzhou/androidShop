<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.hsky.androidshop.fragment.MainProject"
    android:background="@color/ColorHeader">
    <TextView
        android:id="@+id/project_title"
        android:text="全部产品"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        />

    <EditText
        android:layout_below="@id/project_title"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:hint="输入产品名称搜索"
        android:textColorHint="#ccc"
        android:drawableLeft="@drawable/project_search"
        android:background="@drawable/project_search_round"
        android:drawablePadding="10dp"
        android:paddingLeft="40dp"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:layout_centerInParent="true"
        android:textSize="14sp"/>

    <HorizontalScrollView
        android:id="@+id/project_major_catagory"
        android:layout_below="@id/project_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:layout_marginTop="90dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:background="#fff"
        android:fillViewport="false"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/project_major_catagory_linear"
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center">
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/project_linear"
        android:layout_below="@id/project_major_catagory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <ListView
            android:id="@+id/project_second_catagory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorProjectSecondList"></ListView>

        <ListView
            android:id="@+id/project_content_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white">
        </ListView>
    </LinearLayout>
</RelativeLayout>
