<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_relativelayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp">

    <ImageView
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:id="@+id/project_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/project_name"
        android:layout_toRightOf="@id/project_image"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/project_desc"
        android:layout_below="@id/project_name"
        android:layout_toRightOf="@id/project_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"/>
    <LinearLayout
        android:id="@+id/project_select"
        android:layout_below="@id/project_desc"
        android:layout_toRightOf="@id/project_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <ImageView
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:id="@+id/project_add"
            android:src="@drawable/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/buy_number"
            android:text="0"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:id="@+id/project_delete"
            android:src="@drawable/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/project_price_unit"
        android:layout_below="@id/project_select"
        android:layout_toRightOf="@id/project_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/project_standard"
        android:layout_below="@id/project_price_unit"
        android:layout_toRightOf="@id/project_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"/>
</RelativeLayout>